#structure basic penulisan:
  SELECT kolom1, kolom2
  FROM tabel;
  
#fungsi yang sering di tambahakan:  

  #alias(memeberiakan nama baru)
    kolom1 AS nama_kolom_baru
    
  #operasional matematik
    (kolom1 * kolom2) as nama_kolom_baru
    
  #membatasi jumlah baris
    LIMIT 5

#contoh query:
  SELECT id_transaction, (quantity * price) as total_price
  FROM transaction
  LIMIT 5;
