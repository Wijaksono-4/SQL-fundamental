# Basic formula GROUP BY
  SELECT kolom1, kolom2, kolom3
  FROM tabel
  GROUP BY kolom1

# Basic formula HAVING 
  SELECT kolom1, kolom2, kolom3
  FROM tabel
  GROUP BY kolom1
  HAVING conditional

# Contoh query
  SELECT store, month, SUM(total_sales)
  FROM sales
  GROUP BY store, month
  HAVING SUM(total_sales) > 25000000
